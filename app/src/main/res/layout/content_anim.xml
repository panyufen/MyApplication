<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/android/skin"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background"
    skin:enable="true"
    tools:showIn="@layout/activity_anim"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/item_selector"
            android:onClick="startPathAnim"
            android:text="PathAnim"
            android:textAllCaps="false"
            android:textColor="@color/normal_text_color"
            skin:enable="true"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/item_selector"
            android:onClick="startSvgPathAnim"
            android:text="SvgPathAnim"
            android:textAllCaps="false"
            android:textColor="@color/normal_text_color"
            skin:enable="true"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/item_selector"
            android:onClick="startLayoutAnim"
            android:text="LayoutAnim"
            android:textAllCaps="false"
            android:textColor="@color/normal_text_color"
            skin:enable="true"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/item_selector"
            android:onClick="startPropertyAnim"
            android:text="PropertyAnim"
            android:textAllCaps="false"
            android:textColor="@color/normal_text_color"
            skin:enable="true"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/item_selector"
            android:onClick="startXMLPropertyAnim"
            android:text="XMLPropertyAnim"
            android:textAllCaps="false"
            android:textColor="@color/normal_text_color"
            skin:enable="true"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/item_selector"
            android:onClick="startViewPager"
            android:text="ViewPagerAnim"
            android:textAllCaps="false"
            android:textColor="@color/normal_text_color"
            skin:enable="true"
            />
    </LinearLayout>
</ScrollView>
