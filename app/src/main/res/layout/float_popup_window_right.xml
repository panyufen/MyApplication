<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center_vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_menu"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginRight="2dp"
        android:gravity="center_vertical"
        android:background="@drawable/float_popup_background_left"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/float_menu_item_close"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退出"
                android:textColor="#646464"
                android:textSize="10sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/line_item_background" />


        <LinearLayout
            android:id="@+id/float_menu_item_first"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/float_menu_item_first_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始"
                android:textColor="#646464"
                android:textSize="10sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>