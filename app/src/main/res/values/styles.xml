<resources>

    <style name="BaseAppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:listDivider">@drawable/divider_bg</item>
        <item name="toolbarStyle">@style/MyToolBarStyle</item>
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
        <item name="android:textColor">@color/normal_text_color</item>
        <item name="toolbarNavigationButtonStyle">@style/MyToolBarNavigation</item>
        <!--设置menu中item的图标颜色-->
        <!--<item name="android:textColorPrimary">@android:color/white</item>-->
        <!--<item name="android:textColorSecondary">@android:color/white</item>-->
        <!--<item name="android:actionMenuTextColor">@android:color/white</item>-->
    </style>

    <style name="AppTheme" parent="BaseAppTheme">

    </style>

    <style name="MyToolBarStyle" parent="Base.Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="MyToolBarNavigation" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">56dp</item>
    </style>

    <style name="MySearchViewStyle" parent="Base.Widget.AppCompat.SearchView">
        <item name="searchHintIcon">@null</item>
    </style>

    <style name="AppTheme.StatusTranslattion">
    </style>

    <style name="AppTheme.AppStartLoad" parent="NoActionBar.FullScreen">
        <item name="android:windowBackground">@mipmap/loading_bg</item>
        <!--<item name="android:windowAnimationStyle">@style/ActivityNoAnimationStyle</item>-->
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="transparent" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="SlideOutAlertDialogFromBottom" parent="android:Animation.Dialog">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="ActivityNoAnimationStyle">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

    <style name="Car4sMain">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/normal_text_color</item>
        <item name="android:textColorHint">@color/assist_text_color</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="NoActionBar.FullScreen" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="text_center">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CollapsingToolbarTitleStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/transparent</item>
    </style>


    <style name="AppBarlayoutStyle">
        <item name="android:textColor">@color/common_black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="DividerVerticalStyle">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/default_blue_royal</item>
    </style>

    <style name="DividerHorizontalStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/default_blue_royal</item>
    </style>

    <style name="popupWindowAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_enter_left</item>
        <item name="android:windowExitAnimation">@anim/popup_exit_left</item>
    </style>

    <style name="popupWindowRightAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_enter_right</item>
        <item name="android:windowExitAnimation">@anim/popup_exit_right</item>
    </style>
</resources>
