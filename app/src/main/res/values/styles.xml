<resources>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/common_white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:listDivider">@drawable/divider_bg</item>

        <item name="toolbarStyle">@style/MyToolBarStyle</item>
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
        <!--设置menu中item的图标颜色-->
        <item name="android:textColorSecondary">#ffffff</item>

    </style>

    <style name="AppTheme" parent="BaseAppTheme">

    </style>

    <style name="MyToolBarStyle" parent="Base.Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="MySearchViewStyle" parent="Base.Widget.AppCompat.SearchView">
        <item name="searchHintIcon">@null</item>
    </style>

    <style name="AppTheme.StatusTranslattion">
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="transparent" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="SlideOutAlertDialogFromBottom" parent="android:Animation.Dialog">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="Car4sMain">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/normal_text_color</item>
        <item name="android:textColorHint">@color/assist_text_color</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="NoActionBar.FullScreen" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="text_center">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CollapsingToolbarTitleStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/transparent</item>
    </style>


    <style name="AppBarlayoutStyle">
        <item name="android:textColor">@color/common_black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">false</item>
    </style>
</resources>
